# ===============================
# Server
# ===============================
SERVER_ADDRESS_PORT=8080


# ===============================
# PostgreSQL
# ===============================
POSTGRE_SQL_USERNAME=user
POSTGRE_SQL_PASSWORD=password
POSTGRE_SQL_HOST=localhost
POSTGRE_SQL_PORT=5432
POSTGRE_SQL_NAME=ipfs_orchestrator
POSTGRE_SQL_CONNECTION_SCHEME=postgres
POSTGRE_SQL_SSL_MODE=disable


# ===============================
# Cluster defaults
# ===============================

# Service type for external access
# ClusterIP | NodePort | LoadBalancer
CLUSTER_SERVICE_TYPE=ClusterIP

# StorageClass (empty = default storage class)
CLUSTER_STORAGE_CLASS=standard

# Images
CLUSTER_IPFS_IMAGE=ipfs/kubo:v0.26.0
CLUSTER_IPFS_CLUSTER_IMAGE=ipfs/ipfs-cluster:v1.1.3

# ConfigMaps names
CLUSTER_CONFIG_MAP_ENV=ipfs-env-config
CLUSTER_CONFIG_MAP_SCRIPT=ipfs-scripts-config

# Secrets (usually generated dynamically, but defaults are needed)
CLUSTER_SECRET=cluster-secret
CLUSTER_BOOTSTRAP_PRIV_KEY=bootstrap-private-key
CLUSTER_BOOTSTRAP_PEER_ID=bootstrap-peer-id


# ===============================
# Node ports
# ===============================
NODE_PORT_SWARM_TCP=4001
NODE_PORT_SWARM_UDP=4002
NODE_PORT_API=5001
NODE_PORT_HTTP_GATEWAY=8080
NODE_PORT_WS=8081
NODE_PORT_CLUSTER_API=9094
NODE_PORT_CLUSTER_PROXY=9095
NODE_PORT_CLUSTER_SWARM=9096


# ===============================
# Init container
# ===============================
INIT_CONTAINER_NAME=configure-ipfs
INIT_CONTAINER_IMAGE=ipfs/kubo:release
INIT_CONTAINER_COMMAND=["sh","/custom/configure-ipfs.sh"]


# ===============================
# Kubernetes
# ===============================
KUBE_CONFIG_PATH=/Users/olegmalcev/.kube/config
MANUAL_KUBE_CONFIG_FLAG=true
